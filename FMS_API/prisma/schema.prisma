generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Vehicle {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  model     String
  type      String
  region    String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  maintenanceRecords MaintenanceRecord[]
  sensors            Sensor[]
  analytics          VehicleAnalytics[]
}

model MaintenanceRecord {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  vehicleId   String   @db.ObjectId
  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id])
  date        DateTime
  description String
  cost        Float

  @@index([vehicleId, date])
}

// Assesment didnt request this but it would be better to have. and also allows a relation vehicle->sensors
model Sensor {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  vehicleId String   @db.ObjectId
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
  name      String
  type      String // e.g., temperature, mileage, gps
  unit      String // e.g., Â°C, km, km/h
  createdAt DateTime @default(now())

  readings Telemetry[]
}

model Telemetry {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  sensorId  String   @db.ObjectId
  sensor    Sensor   @relation(fields: [sensorId], references: [id])
  payload   Json
  timestamp DateTime @default(now())

  @@index([sensorId, timestamp])
}

model VehicleAnalytics {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  vehicleId        String   @unique @db.ObjectId
  vehicle          Vehicle  @relation(fields: [vehicleId], references: [id])
  hoursOperated    Int
  distanceTraveled Int
  location         Json
  lastUpdated      DateTime @updatedAt

  @@index([lastUpdated])
}
